<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block body %}

        <div id="sidebar">
            {% block sidebar %}
                <ul>
                    <li><a href="{{ path('book_index') }}">Book</a></li>
                    <li><a href="{{ path('author_index') }}">Author</a></li>
                    <li><a href="{{ path('book_doctrine_request') }}">Doctorine request</a></li>
                    <li><a href="{{ path('book_sql_request') }}">Sql request</a></li>
                </ul>
            {% endblock %}
        </div>

        <div id="content">
            {% block content %} {% endblock %}
        </div>

        {% endblock %}

    </body>
</html>
